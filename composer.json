{
	"name": "webmultipliers/wp2-update",
	"description": "Private GitHub theme updates via GitHub App integration.",
	"type": "wordpress-plugin",
	"autoload": {
		"psr-4": {
			"WP2\\Update\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"authors": [
		{
			"name": "Vinny S. Green",
			"homepage": "https://vinnysgreen.com"
		}
	],
	"require": {
		"php": "^8.3",
		"knplabs/github-api": "^3.16",
		"symfony/http-client": "^7.3",
		"nyholm/psr7": "^1.8",
		"symfony/polyfill-mbstring": "^1.33",
		"firebase/php-jwt": "^6.11",
		"woocommerce/action-scheduler": "^3.5"
	},
	"require-dev": {
		"pestphp/pest": "^4.1",
		"mockery/mockery": "^1.6",
		"brain/monkey": "^2.6",
		"wp-cli/wp-cli": "^2.12",
		"squizlabs/php_codesniffer": "^3.7.2",
		"wp-coding-standards/wpcs": "^3.2",
		"phpstan/phpstan": "^1.12",
		"phpunit/phpunit": "^12.0"
	},
	"config": {
		"allow-plugins": {
			"pestphp/pest-plugin": true,
			"php-http/discovery": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"build": "composer install --no-dev && npm install && npm run build",
		"lint": "vendor/bin/phpcs --standard=WordPress .",
		"stan": "vendor/bin/phpstan analyse --configuration=phpstan.neon.dist --no-progress"
	}
}